# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
PLATFORM_DOMAIN=localhost
ALLOWED_HOSTS=localhost,127.0.0.1,*.localhost,shop1.localhost,shop2.localhost

# Database Options
# Option 1: Use SQLite (easier for development)
USE_SQLITE=True

# Option 2: Use PostgreSQL (comment out USE_SQLITE above)
# DB_NAME=shop_platform
# DB_USER=postgres
# DB_PASSWORD=your_postgres_password
# DB_HOST=localhost
# DB_PORT=5432

# Cache
USE_LOCAL_CACHE=True
# REDIS_URL=redis://127.0.0.1:6379/1

# Email Settings (for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# File Upload
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# Security Settings
BLOCKED_IPS=
MAX_REQUESTS_PER_MINUTE=100
MAINTENANCE_MODE=False

# Multi-Store Settings
STORE_APPROVAL_REQUIRED=True
AUTO_APPROVE_STORES=True

# Payment Gateways (Optional)
# ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id
# MELLAT_TERMINAL_ID=your-mellat-terminal-id
# MELLAT_USERNAME=your-mellat-username
# MELLAT_PASSWORD=your-mellat-password

# Media Storage (AWS S3 - Optional for production)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
